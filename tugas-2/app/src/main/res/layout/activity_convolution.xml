<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".Convolution">

    <ImageView
        android:id="@+id/convoImageView"
        android:layout_width="263dp"
        android:layout_height="300dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/convoSpinner"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/convoTransformButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convoImageView"
        app:layout_constraintVertical_bias="0.116" />

    <EditText
        android:id="@+id/element00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convoSpinner" />

    <EditText
        android:id="@+id/element01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="@id/element00"
        app:layout_constraintTop_toBottomOf="@id/convoSpinner" />

    <EditText
        android:id="@+id/element02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="@id/element01"
        app:layout_constraintTop_toBottomOf="@id/convoSpinner" />

    <EditText
        android:id="@+id/element10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/element00" />

    <EditText
        android:id="@+id/element11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="@id/element10"
        app:layout_constraintTop_toBottomOf="@id/element01" />

    <EditText
        android:id="@+id/element12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="@id/element11"
        app:layout_constraintTop_toBottomOf="@id/element02" />

    <EditText
        android:id="@+id/element20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/element10" />

    <EditText
        android:id="@+id/element21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="@id/element20"
        app:layout_constraintTop_toBottomOf="@id/element11" />

    <EditText
        android:id="@+id/element22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:inputType="number|numberSigned"
        app:layout_constraintStart_toStartOf="@id/element21"
        app:layout_constraintTop_toBottomOf="@id/element12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/transform"
        android:id="@+id/convoTransformButton"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/element21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/convoBackButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convoTransformButton" />
  </android.support.constraint.ConstraintLayout>
</ScrollView>